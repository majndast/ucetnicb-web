generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String
  email     String
  phone     String?
  message   String
  read      Boolean  @default(false)

  @@index([createdAt])
  @@index([read])
}
